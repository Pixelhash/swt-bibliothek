#parse('/velocity/layout.vm')
#@mainLayout()
<section class="hero is-light is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title is-3">
                <span class="icon icon-nav has-text-grey-dark">
                    <i class="fa fa-check"></i>
                </span>
                <span>$msg.get("INDEX_RESULTS_TITLE")</span>
            </h1>
        </div>
    </div>
</section>
<section class="section">
    <div class="container has-text-centered">
        <h3 class="subtitle is-5">$amount $msg.get("INDEX_RESULTS_SUBTITLE") $query</h3>
        <div class="columns">
            <div class="column is-3"></div>
            <div class="column is-6">
                <ul>
                    #foreach($book in $books)
                    <li>Titel: $book.getTitel(), Kategorie: $book.getKategorie().getName()</li>
                    #end
                </ul>
            </div>
            <div class="column is-3"></div>
        </div>
    </div>
</section>
#end