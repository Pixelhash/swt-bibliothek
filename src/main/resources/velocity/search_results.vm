#parse('/velocity/layout.vm')
#@mainLayout()
<section class="hero is-light is-bold">
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title is-3">
                <span class="icon icon-nav has-text-grey-dark">
                    <i class="fa fa-check"></i>
                </span>
                <span>$msg.get("INDEX_RESULTS_TITLE")</span>
            </h1>
        </div>
    </div>
</section>
<section class="section">
    <div class="container has-text-centered">
        <h3 class="subtitle is-5">$amount $msg.get("INDEX_RESULTS_SUBTITLE") $query</h3>
        <div class="columns">
            <div class="column is-2"></div>
            <div class="column is-8">
                #foreach($book in $books)
                    <div class="card">
                        <header class="card-header">
                            <p class="card-header-title">
                                $book.getTitel()
                            </p>
                        </header>
                        <div class="card-content">
                            <div class="content">
                                <b>Autoren: </b>
                                #foreach($author in $book.getAutoren())
                                    ${author.getName()},
                                #end
                                <br><b>Kategorie:</b> $book.getKategorie().getName()
                                <br><b>Erscheinungsjahr: </b> $book.getYearFormatted()
                                <br><b>ISBN: </b> $book.getIsbn()
                            </div>
                        </div>
                        <footer class="card-footer">
                            <a href="#" class="card-footer-item">$book.getExemplare() Exemplar(e) vorhanden</a>
                        </footer>
                    </div>
                #end
            </div>
            <div class="column is-2"></div>
        </div>
    </div>
</section>
#end